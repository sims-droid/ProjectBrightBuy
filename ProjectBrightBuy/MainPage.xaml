<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProjectBrightBuy.MainPage">
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Spacing="15" Padding="20">

            <!-- Header: Logo + Search + Profile -->
            <HorizontalStackLayout VerticalOptions="Start" Spacing="10">
                <Image Source="logo.jpg" HeightRequest="40" WidthRequest="40" />
                <Entry x:Name="SearchBar" Placeholder="Search products..." 
                       BackgroundColor="#F2F2F2" 
                       HeightRequest="40"
                       HorizontalOptions="FillAndExpand"
                       CornerRadius="20" />
                <Image Source="profile_icon.png" HeightRequest="35" WidthRequest="35" />
            </HorizontalStackLayout>

            <!-- Navigation Bar -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="30">
                <Button Text="Home" FontAttributes="Bold" />
                <Button Text="Categories" />
                <Button Text="Wishlist" />
                <Button Text="Cart" />
            </HorizontalStackLayout>

            <!-- Featured Deals Banner -->
            <Frame CornerRadius="15" BackgroundColor="#FFD700" Padding="15">
                <VerticalStackLayout>
                    <Label Text="🔥 Big Sale!" FontSize="24" FontAttributes="Bold" TextColor="Black" />
                    <Label Text="Up to 50% off electronics!" FontSize="14" TextColor="#333" />
                    <Button Text="Shop Now" 
                            BackgroundColor="Black" 
                            TextColor="White"
                            CornerRadius="20"
                            WidthRequest="120"
                            HeightRequest="40"
                            Margin="0,10,0,0" />
                </VerticalStackLayout>
            </Frame>

            <!-- Categories Section -->
            <Label Text="Shop by Category" FontSize="18" FontAttributes="Bold" />
            <ScrollView Orientation="Horizontal">
                <HorizontalStackLayout Spacing="10">
                    <Frame BackgroundColor="#F5F5F5" CornerRadius="15" Padding="10">
                        <Label Text="Clothing" />
                    </Frame>
                    <Frame BackgroundColor="#F5F5F5" CornerRadius="15" Padding="10">
                        <Label Text="Electronics" />
                    </Frame>
                    <Frame BackgroundColor="#F5F5F5" CornerRadius="15" Padding="10">
                        <Label Text="Furniture" />
                    </Frame>
                    <Frame BackgroundColor="#F5F5F5" CornerRadius="15" Padding="10">
                        <Label Text="More" />
                    </Frame>
                </HorizontalStackLayout>
            </ScrollView>

            <!-- Recommended Products -->
            <Label Text="Recommended for You" FontSize="18" FontAttributes="Bold" Margin="0,10,0,5" />

            <CollectionView ItemsSource="{Binding Products}">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical" Span="2" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame BorderColor="#ddd" CornerRadius="10" Padding="10" Margin="5">
                            <VerticalStackLayout>
                                <Image Source="{Binding Image}" HeightRequest="100" Aspect="AspectFit" />
                                <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="14" />
                                <Label Text="{Binding Price, StringFormat='R{0:F2}'}" TextColor="#0078D7" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Footer -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20" Margin="0,20,0,0">
                <Label Text="Contact" TextColor="#777" />
                <Label Text="Help" TextColor="#777" />
                <Label Text="About Us" TextColor="#777" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>